#!/bin/bash

OUT=$(printf "Shutdown\\nReboot\\nSuspend\\nHibernate" | dmenu -i -l 4)

if [ "$OUT" == "Shutdown" ]; then
    systemctl poweroff
elif [ "$OUT" == "Reboot" ]; then
    systemctl reboot
elif [ "$OUT" == "Suspend" ]; then
    systemctl suspend
elif [ "$OUT" == "Hibernate" ]; then
    systemctl hibernate
fi
