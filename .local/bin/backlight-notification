#!/bin/bash

BRIGHTNESS=$(
    case "$1" in
        inc)
            brightnessctl -m set +7%
            ;;
        dec)
            brightnessctl -m -n1 set 7%-
            ;;
        *)
            brightnessctl -m i
            ;;
    esac | grep -oP '[0-9]+(?=%)'
)

notify-send "ï†… Backlight" "$BRIGHTNESS/100" -t 4000 -r 1 &
