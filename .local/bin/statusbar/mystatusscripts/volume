#!/bin/bash

volstat=$(pactl list sinks)

vol=$(echo "$volstat" | grep '^[[:space:]]Volume:' | tail -n 1 | sed -e 's,.* \([0-9][0-9]*\)%.*,\1,')

if [ $vol -gt 70 ]; then
	icon=" "
elif [ $vol -lt 30 ]; then
	icon=" "
else
	icon=" "
fi
echo "$volstat" | grep '^[[:space:]]Mute:' | tail -n 1 | grep yes > /dev/null && icon="❗"
printf "%s%% \\n" "$icon""$vol"
